{
  "include": ["src/**/*"],
  "compilerOptions": {
    
    "target": "ES2017",
    "module": "commonjs",                     
    "outDir": "./dist/src",
    "rootDir": "./src",               
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "allowJs": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "sourceMap": true
  }
}
