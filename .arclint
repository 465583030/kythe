{
  "linters": {
    "spelling": {
      "type": "spelling",
      "exclude": "(^third_party)"
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "campfire": {
      "type": "json",
      "include": "([/^]CAMPFIRE$|^.campfire_settings$)"
    },
    "go": {
      "type": "golint",
      "include": "(\\.go$)",
      "exclude": "(^third_party|^kythe/proto/)"
    },
    "custom": {
      "type": "script-and-regex"
    }
  }
}
